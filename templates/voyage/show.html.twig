{% extends 'template.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ voyage.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ voyage.image }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ voyage.images ? voyage.images|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Inclus</th>
                <td>{{ voyage.inclus }}</td>
            </tr>
            <tr>
                <th>NonInclus</th>
                <td>{{ voyage.nonInclus }}</td>
            </tr>
            <tr>
                <th>Excursion</th>
                <td>{{ voyage.excursion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voyage_index') }}">back to list</a>

    <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">edit</a>

    {{ include('voyage/_delete_form.html.twig') }}
