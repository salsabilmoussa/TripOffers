{% endblock %}

{% block body %}
	<h1>Destination</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ destination.id }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ destination.content }}</td>
